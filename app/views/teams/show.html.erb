
<h3>
  <%= @team.title  %>
</h3>

<p>
  <%= "#{@team.title2}" if @team.title2.present? %>
</p>


<!-- todo: use different css class e.g. db?? -->
<table class='play'>
<% @team.games.each do |game| %>
<tr>
   
<%= render_game_date( game ) %>

<%= render_game_team1( game ) %>
<%= render_game_score( game ) %>
<%= render_game_team2( game ) %>

<!-- fix/todo: use part helper -->
<td class='game-round'>
  (<%= link_to game.round.event.title, event_path(game.round.event) %> - <%= game.round.title %>)
<td>

</tr>
<% end %> <!-- games -->
</table>